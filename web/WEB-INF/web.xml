<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>SearchServelt</servlet-name>
        <servlet-class>servelt.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServelt</servlet-name>
        <url-pattern>/getlist</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>servelt.AddItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyItemServlet</servlet-name>
        <servlet-class>servelt.ModifyItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyItemServlet</servlet-name>
        <url-pattern>/modifyItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayItemServlet</servlet-name>
        <servlet-class>servelt.DisplayItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayItemServlet</servlet-name>
        <url-pattern>/displayItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>servelt.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deleteItems</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>环境现状列表.html</welcome-file>
    </welcome-file-list>
</web-app>